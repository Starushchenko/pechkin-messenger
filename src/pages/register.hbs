---
pageTitle: Регистрация
---
{{!< default}}

<div class="app__sidebar app__sidebar--white">
  <h1 class="app__sidebar-title">Регистрация</h1>
  <div class="app__sidebar-form form">
    <div class="form__field">
      <label for="email">Почта</label>
      <input type="email" name="email" id="email" placeholder="ivanov@yandex.ru" aria-label="Ваш email">
    </div>
    <div class="form__field">
      <label for="login">Логин</label>
      <input type="text" name="login" id="login" placeholder="konstantin_ivanov" aria-label="Ваш логин">
    </div>
    <div class="form__field">
      <label for="name">Имя</label>
      <input type="text" name="name" id="name" placeholder="Константин" aria-label="Ваше имя">
    </div>
    <div class="form__field">
      <label for="surname">Фамилия</label>
      <input type="text" name="surname" id="surname" placeholder="Иванов" aria-label="Ваша фамилия">
    </div>
    <div class="form__field">
      <label for="phone">Телефон</label>
      <input type="tel" name="phone" id="phone" placeholder="+7 (909) 967 30 30" aria-label="Ваш телефон">
    </div>
    <div class="form__field">
      <label for="password">Пароль</label>
      <input type="password" name="password" id="password" placeholder="***********************"
        aria-label="Ваш пароль">
    </div>
    <div class="form__field form__field--error">
      <label for="password-confirm">Пароль (ещё раз)</label>
      <input type="password" name="password-confirm" id="password-confirm" placeholder="***********************"
        aria-label="Ваш пароль (ещё раз)">
      <span class="form__field-info">Пароли не совпадают</span>
    </div>

    <div class="form__buttons">
      {{> button/button text="Зарегистрироваться" }}
      {{> button/button text="Войти" classes="button--link" }}
    </div>
  </div>
</div>

<div class="app__main">
  {{> welcome/welcome title='Pechkin Messanger' desc='место, где нет преград общению' }}
</div>
 
