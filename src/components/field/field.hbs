{{#if isTextArea }}
  <textarea
    name="{{name}}"
    id="{{name}}"
    class="{{class}}"
    placeholder="{{placeholder}}"
    aria-label="{{label}}"
    required="{{required}}"
  >
    {{value}}
  </textarea>
{{ else }}
  <input
    type="{{type}}"
    name="{{name}}"
    id="{{name}}"
    class="{{class}}"
    placeholder="{{placeholder}}"
    aria-label="{{label}}"
    value="{{value}}"
    {{#if confirmField }} data-confirm-field="{{confirmField}}" {{/if}}
    {{#if noValidateOnBlur }} data-no-blur-validate {{/if}}
    {{#if required }}required="{{required}}" {{/if}}
    {{#if rule }} pattern="{{rule}}" {{/if}}
    {{#if minlength }} minlength="{{minlength}}" {{/if}}
    {{#if maxlength }} maxlength="{{maxlength}}" {{/if}}
    {{#if autocomplete }}autocomplete="{{autocomplete}}"{{/if}}
  >
{{/if}}
