{% macro chatHeader(data) %}
  <div class="chat-header">
    <div class="chat-header__avatar">
      {% if data.avatar %}
        <img src="{{ data.avatar }}" alt="{{ data.name }}">
      {% else %}
        <img src="./../images/svg/placeholder.svg" alt="Изображение не загружено">
      {% endif %}
    </div>
    <div class="chat-header__title">{{ data.name }}</div>
    <div class="chat-header__actions-wrap">
      <button class="chat-header__actions-trigger js-dropdown-trigger" title="Открыть опции">
        Открыть опции
        <svg width="36" height="36" viewBox="0 0 36 36" fill="none">
          <path d="M18 11.52C19.1929 11.52 20.16 10.5529 20.16 9.35995C20.16 8.16702 19.1929 7.19995 18 7.19995C16.8071 7.19995 15.84 8.16702 15.84 9.35995C15.84 10.5529 16.8071 11.52 18 11.52Z" fill="#1E1E1E"/>
          <path d="M18 20.16C19.1929 20.16 20.16 19.1929 20.16 18C20.16 16.807 19.1929 15.84 18 15.84C16.8071 15.84 15.84 16.807 15.84 18C15.84 19.1929 16.8071 20.16 18 20.16Z" fill="#1E1E1E"/>
          <path d="M18 28.8C19.1929 28.8 20.16 27.8329 20.16 26.64C20.16 25.447 19.1929 24.48 18 24.48C16.8071 24.48 15.84 25.447 15.84 26.64C15.84 27.8329 16.8071 28.8 18 28.8Z" fill="#1E1E1E"/>
        </svg>
      </button>
      
      <div class="dropdown dropdown--right">
        <div class="dropdown__items">
          <a href="#" class="dropdown__item">
            <svg class="dropdown__item-icon" width="22" height="22" viewBox="0 0 22 22" fill="none">
              <circle cx="11" cy="11" r="10.25" stroke="#1EB759" stroke-width="1.5"/>
              <line x1="10.9999" y1="5.5" x2="10.9999" y2="16.5" stroke="#1EB759" stroke-width="1.5"/>
              <line x1="5.49988" y1="11" x2="16.4999" y2="11" stroke="#1EB759" stroke-width="1.5"/>
            </svg>
            Добавить пользователя
          </a>
          <a href="#" class="dropdown__item">
            <svg class="dropdown__item-icon" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="11" cy="11" r="10.25" stroke="#1EB759" stroke-width="1.5"/>
              <line x1="7.11077" y1="7.11103" x2="14.8889" y2="14.8892" stroke="#1EB759" stroke-width="1.5"/>
              <line x1="7.11078" y1="14.8891" x2="14.889" y2="7.11093" stroke="#1EB759" stroke-width="1.5"/>
            </svg>
            Удалить пользователя
          </a>
          <a href="#" class="dropdown__item dropdown__item--alert">
            <svg class="dropdown__item-icon" width="22" height="22" viewBox="0 0 22 22" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.8334 9.16667L12.5584 15.5833M9.44169 15.5833L9.16669 9.16667M5.50002 5.5L6.29222 17.383C6.36226 18.4336 7.23487 19.25 8.28779 19.25H13.7122C14.7652 19.25 15.6378 18.4336 15.7078 17.383L16.5 5.5M5.50002 5.5H8.25002M5.50002 5.5H3.66669M16.5 5.5H18.3334M16.5 5.5H13.75M13.75 5.5V4.75C13.75 3.64543 12.8546 2.75 11.75 2.75H10.25C9.14545 2.75 8.25002 3.64543 8.25002 4.75V5.5M13.75 5.5H8.25002" stroke="#DB3D3C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
