{% from "../chat-header/chat-header.njk" import chatHeader %}
{% from "../chat-conversation/chat-conversation.njk" import chatConversation %}
{% from "../chat-actions/chat-actions.njk" import chatActions %}
{% from "../modal/modal.njk" import modal %}

{% macro chat(data) %}
  <div class="chat">
    {{ chatHeader({
      name: data.name,
      avatar: data.avatar
    }) }}
    
    {{ chatConversation(data.archive) }}
    
    {{ chatActions() }}
    
    {{ modal('Добавить пользователя') }}
  </div>
{% endmacro %}
