{
  "name": "pechkin-messenger",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run build && node ./server/index.js",
    "dev": "parcel src/pages/*.njk --no-cache",
    "build": "parcel build src/pages/*.njk --public-url ./ --no-source-maps --no-cache",
    "lint": "tsc --noEmit && eslint ./src/**/*.ts && npx stylelint ./src/**/*.scss",
    "lint:fix": "tsc --noEmit && eslint --fix ./src/**/*.ts && npx stylelint ./src/**/*.scss --fix"
  },
  "author": "Yaroslav Starushchenko <starushchenkoyaroslav@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@namics/stylelint-bem": "7.0.0",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "cssnano": "4.1.11",
    "eslint": "7.14.0",
    "express": "4.18.1",
    "nanoid": "4.0.0",
    "nunjucks": "3.2.3",
    "parcel-bundler": "1.12.5",
    "parcel-plugin-custom-dist-structure": "1.1.18",
    "parcel-plugin-nunjucks": "2.2.2",
    "sass": "1.53.0",
    "stylelint": "14.9.1",
    "stylelint-config-standard-scss": "5.0.0",
    "typescript": "4.7.4"
  },
  "engines": {
    "npm": "8.11.0",
    "node": "v16.16.0"
  },
  "customDistStructure": {
    "config": {
      "images": [
        ".jpg",
        ".png",
        ".svg"
      ],
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "fonts": [
        ".ttf",
        ".woff",
        ".eot"
      ]
    },
    "options": {
      "development": true
    }
  }
}
