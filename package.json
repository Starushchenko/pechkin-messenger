    "@parcel/transformer-sass": "2.7.0",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "chai": "4.3.6",
    "cssnano": "4.1.11",
    "eslint": "7.14.0",
